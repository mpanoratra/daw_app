<% if @possible_users.blank? %>
  All users are on this project already.
<% else %>
  Add a user to: 
  <%= @project.name %>
  <%= form_tag save_user_project_path(@project) do %>
    <%= collection_select(:user_id, "", @possible_users, :id, :email)  %>
    <%= button_tag "Add User" %>
  <% end %>
<% end %>
<%= link_to 'Back', @project %>
